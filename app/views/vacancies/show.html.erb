<h1><%= @vacancy.name %></h1>
<div>
  <div style="float:left;">
    <%= link_to "Вакансии", vacancies_path, class: "btn btn-primary" %>
  </div>
  <div style="float:right;">
    <%= link_to "Обновить", edit_vacancy_path(@vacancy), class: "btn btn-default" %>
  </div>
</div>
<div style="clear: both;padding-top: 20px;">
  <div>
    Создана:
    <%= l @vacancy.created_at, format: :long %>
  </div>
  <div>
    Доступна до:
    <%= l @vacancy.validity, format: :long if @vacancy.validity %>
  </div>
  <div>
    Заработная плата в рублях:
    <%= @vacancy.price %>
  </div>
  <div>
    Контактная информация:
    <%= @vacancy.contacts %>
  </div>
  <div>
    Скилы:
    <% @vacancy.skills.each do |skill| %>
      <span class="skill_tag"><%= skill.name %></span>
    <% end %>
  </div>
</div>
