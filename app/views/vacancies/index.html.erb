<h1>Вакансии</h1>
<div>
  <div style="float:left;">
    <%= link_to "Новая вакансия", new_vacancy_path, class: "btn btn-primary" %>
  </div>
  <div style="float:right;">
    <%= link_to "Резюме", resumes_path, class: "btn btn-default" %>
  </div>
</div>
<div style="clear: both;padding-top: 20px;">
  <table>
    <tr>
      <td>Название</td>
      <td>Дата создания</td>
      <td>Дата завершения</td>
      <td>ЗП</td>
    </tr>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td>
          <%= link_to vacancy.name, vacancy %>
        </td>
        <td>
          <%= l vacancy.created_at, format: :short %>
        </td>
        <td>
          <%= l vacancy.validity, format: :short if vacancy.validity %>
        </td>
        <td>
          <span><%= vacancy.price %> руб.</span>
        </td>
      </tr>
    <% end %>
  </table>
</div>
