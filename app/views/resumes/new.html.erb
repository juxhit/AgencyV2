<h1>Новое резюме</h1>
<div>
  <div style="float:left;">
    <%= link_to "Резюме", resumes_path, class: "btn btn-primary" %>
  </div>
  <div style="float:right;">
    <%= link_to "Вакансии", vacancies_path, class: "btn btn-default" %>
  </div>
</div>
<div style="clear: both;padding-top: 20px;">
  <%= form_tag resumes_path do %>
    <div style="padding:10px 0;">
      ФИО:
      <%= text_field_tag :name, "", style: "width:100%;" %>
    </div>
    <div style="padding:10px 0;">
      Статус:
      <%= select_tag :status, options_for_select(["Работаю", "Не работаю"]), style: "width:100%;" %>
    </div>
    <div style="padding:10px 0;">
      Телефон:
      <%= number_field_tag :phone, "", style: "width:100%;" %>
    </div>
    <div style="padding:10px 0;">
      Электронная почта:
      <%= text_field_tag :email, "", style: "width:100%;" %>
    </div>
    <div style="padding:10px 0;">
      Заработная плата в рублях:
      <%= number_field_tag :price, "", style: "width:100%;" %>
    </div>

    <div style="padding:10px 0;">
      Скилы:
      <%#= f.select(:skills, options_for_select(Skill.all.map{|s| [s.name, s.id]}), {}, {multiple: true, class: "skills", style: "width:100%;"}) %>
      <%= select_tag :skills, options_from_collection_for_select(Skill.all, "name", "name"), class: "skills", multiple: true, style: "width:100%;" %>
    </div>

    <div style="padding:10px 0;"><%= submit_tag "Добавить", class: "btn btn-primary" %></div>
  <% end %>
</div>
